@model IEnumerable<Books>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Success"] != null)
{
    <h3>@TempData["Success"]</h3>
}
<div class="container-fluid">
    <div class="row">

        <!--Column 1-->
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">

                    <div class="row">
                        <div class="col text-center">
                            <img height="100" width="100" src="/img/bookicon.png" />
                        </div>
                    </div>

                    <div class="container p-3">
                        <div class="">
                            <h3 class="text-dark text-center">Books in Inventory</h3>
                        </div>
                    </div>

                    <br /><br />

                    @*@if (Model.Count() > 0)*@

                    <div class="row">
                        <div class="col">
                            <table class="table table-bordered table-striped ">

                                <thead>
                                    <tr class="text-center">
                                        <th>Title</th>
                                        <th>Author Name</th>
                                        <th>Genre</th>
                                        <th>Edition</th>
                                        <th>Book Price</th>
                                        <th>Language</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model)
                                    {
                                        <tr>
                                            <td>
                                                @obj.BookTittle
                                            </td>
                                            <td>
                                                @obj.AuthorName
                                            </td>
                                            <td>
                                                @obj.BookGenre
                                            </td>
                                            <td>
                                                @obj.BookEdition
                                            </td>
                                            <td>
                                                @obj.BookPrice
                                            </td>

                                            <td>
                                                @obj.Language
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a asp-controller="Books" asp-action="Update" asp-route-id="@obj.BookId"
                                                   class="btn btn-warning mx-2">
                                                        Update
                                                    </a>
                                                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@obj.BookId"
                                                   class="btn btn-danger mx-2">
                                                        Delete
                                                    </a>
                                                </div>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
            </div>


        </div>

    </div>

    <br />
    <br />

    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Books" asp-action="AddBook" class="btn btn-success" style="width: fit-content"><i class="bi bi-plus-circle"></i> &nbsp; Add Book</a>
        </div>

    </div>
</div>
